<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/text_achievements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textColor="@color/defaultSoftTextColor"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />

    <ScrollView
        android:id="@+id/Achievement_List_Scroll_View_Achievements"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/backgroundColor"
        android:fillViewport="true"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_achievements">

        <LinearLayout
            android:id="@+id/Achievement_List_Linear_Layout_Achievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <LinearLayout
                android:id="@+id/First_Pangram_Linear_Layout_Horizontal_Achievements"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/First_Pangram_Image_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="Star Icon"
                    app:srcCompat="@android:drawable/btn_star_big_off" />

                <LinearLayout
                    android:id="@+id/First_Pangram_Linear_Layout_Vertical_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/First_Pangram_Title_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="First Pangram"
                        android:textColor="@color/achievementTitleText"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/First_Pangram_Details_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="Submit a word that contains every possible letter."
                        android:textColor="@color/achievementDetailText" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Word_Progress_10_Linear_Layout_Horizontal_Achievements"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Word_Progress_10_Image_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="Star Icon"
                    app:srcCompat="@android:drawable/btn_star_big_off" />

                <LinearLayout
                    android:id="@+id/Word_Progress_10_Linear_Layout_Vertical_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/Word_Progress_10_Title_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="10 Words"
                        android:textColor="@color/achievementTitleText"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/Word_Progress_10_Details_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="Submit 10 valid words for a single set of letters."
                        android:textColor="@color/achievementDetailText" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Word_Progress_25_Linear_Layout_Horizontal_Achievements"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Word_Progress_25_Image_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="Star Icon"
                    app:srcCompat="@android:drawable/btn_star_big_off" />

                <LinearLayout
                    android:id="@+id/Word_Progress_25_Linear_Layout_Vertical_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/Word_Progress_25_Title_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="25 Words"
                        android:textColor="@color/achievementTitleText"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/Word_Progress_25_Details_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="Submit 25 valid words for a single set of letters."
                        android:textColor="@color/achievementDetailText" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Word_Progress_50_Linear_Layout_Horizontal_Achievements"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Word_Progress_50_Image_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="Star Icon"
                    app:srcCompat="@android:drawable/btn_star_big_off" />

                <LinearLayout
                    android:id="@+id/Word_Progress_50_Linear_Layout_Vertical_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/Word_Progress_50_Title_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="50 Words"
                        android:gravity="center_vertical"
                        android:textColor="@color/achievementTitleText"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/Word_Progress_50_Details_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="Submit 50 valid words for a single set of letters."
                        android:textColor="@color/achievementDetailText" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Longest_Word_7_Linear_Layout_Horizontal_Achievements"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Longest_Word_7_Image_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="Star Icon"
                    app:srcCompat="@android:drawable/btn_star_big_off" />

                <LinearLayout
                    android:id="@+id/Longest_Word_7_Linear_Layout_Vertical_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/Longest_Word_7_Title_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Long Word"
                        android:textColor="@color/achievementTitleText"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/Longest_Word_7_Details_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="Submit a word with 7 or more letters."
                        android:textColor="@color/achievementDetailText" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Longest_Word_9_Linear_Layout_Horizontal_Achievements"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Longest_Word_9_Image_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="Star Icon"
                    app:srcCompat="@android:drawable/btn_star_big_off" />

                <LinearLayout
                    android:id="@+id/Longest_Word_9_Linear_Layout_Vertical_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/Longest_Word_9_Title_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Very Long Word"
                        android:textColor="@color/achievementTitleText"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/Longest_Word_9_Details_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="Submit a word with 9 or more letters."
                        android:textColor="@color/achievementDetailText" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Longest_Word_11_Linear_Layout_Horizontal_Achievements"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Longest_Word_11_Image_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="Star Icon"
                    app:srcCompat="@android:drawable/btn_star_big_off" />

                <LinearLayout
                    android:id="@+id/Longest_Word_11_Linear_Layout_Vertical_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/Longest_Word_11_Title_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Super Long Word"
                        android:textColor="@color/achievementTitleText"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/Longest_Word_11_Details_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="Submit a word with 11 or more letters."
                        android:textColor="@color/achievementDetailText" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Longest_Word_13_Linear_Layout_Horizontal_Achievements"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Longest_Word_13_Image_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="Star Icon"
                    app:srcCompat="@android:drawable/btn_star_big_off" />

                <LinearLayout
                    android:id="@+id/Longest_Word_13_Linear_Layout_Vertical_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/Longest_Word_13_Title_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Ridiculously Long Word"
                        android:textColor="@color/achievementTitleText"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/Longest_Word_13_Details_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="Submit a word with 13 or more letters."
                        android:textColor="@color/achievementDetailText" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Speed_Demon_1_Linear_Layout_Horizontal_Achievements"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Speed_Demon_1_Image_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="Star Icon"
                    app:srcCompat="@android:drawable/btn_star_big_off" />

                <LinearLayout
                    android:id="@+id/Speed_Demon_1_Linear_Layout_Vertical_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/Speed_Demon_1_Title_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Quick As Lightning"
                        android:textColor="@color/achievementTitleText"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/Speed_Demon_1_Details_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="Submit 10 words with less than 10 seconds between each word."
                        android:textColor="@color/achievementDetailText" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Speed_Demon_2_Linear_Layout_Horizontal_Achievements"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Speed_Demon_2_Image_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="Star Icon"
                    app:srcCompat="@android:drawable/btn_star_big_off" />

                <LinearLayout
                    android:id="@+id/Speed_Demon_2_Linear_Layout_Vertical_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/Speed_Demon_2_Title_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Speed Demon"
                        android:textColor="@color/achievementTitleText"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/Speed_Demon_2_Details_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="Submit 20 words with less than 10 seconds between each word."
                        android:textColor="@color/achievementDetailText" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Playtime_Linear_Layout_Horizontal_Achievements"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Playtime_Image_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="Star Icon"
                    app:srcCompat="@android:drawable/btn_star_big_off" />

                <LinearLayout
                    android:id="@+id/Playtime_Linear_Layout_Vertical_Achievements"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/Playtime_Title_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Pretty Fun"
                        android:textColor="@color/achievementTitleText"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/Playtime_Details_Text_Achievements"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="Play for over 15 minutes."
                        android:textColor="@color/achievementDetailText" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>